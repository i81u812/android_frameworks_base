<resources xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Status bar notification ticker -->
    <style name="TextAppearance.StatusBar.PhoneTicker"
        parent="@*android:style/TextAppearance.StatusBar">
        <!-- Note: must be dp to fit in status bar -->
        <item name="android:textSize">14dp</item>
    </style>

    <!-- Custom tuner settings -->
    <style name="CustomTunerSettings" parent="@android:style/Theme.DeviceDefault.Settings">
        <item name="android:windowActionBar">false</item>
        <item name="dropdownPreferenceStyle">@style/CustomTunerSettings.DropdownPreferenceStyle</item>
        <item name="dialogPreferenceStyle">@style/CustomTunerSettings.DialogPreferenceStyle</item>
        <item name="preferenceCategoryStyle">@style/CustomTunerSettings.PreferenceCategoryStyle</item>
        <item name="preferenceFragmentStyle">@style/CustomTunerSettings.PreferenceFragmentStyle</item>
        <item name="preferenceScreenStyle">@style/CustomTunerSettings.PreferenceStyle</item>
        <item name="preferenceStyle">@style/CustomTunerSettings.PreferenceStyle</item>
        <item name="preferenceTheme">@style/CustomTunerSettings.PreferenceTheme</item>
        <item name="switchPreferenceStyle">@style/CustomTunerSettings.SwitchPreferenceStyle</item>
    </style>

    <style name="CustomTunerSettings.DialogPreferenceStyle" parent="@style/CustomTunerSettings.PreferenceStyle">
    </style>

    <style name="CustomTunerSettings.DropdownPreferenceStyle" parent="@style/CustomTunerSettings.PreferenceStyle">
        <item name="android:layout">@layout/preference_dropdown_material_settings</item>
    </style>

    <style name="CustomTunerSettings.PreferenceCategoryStyle" parent="@*android:style/Preference.DeviceDefault.Category">
        <item name="allowDividerAbove">true</item>
        <item name="allowDividerBelow">true</item>
        <item name="android:layout">@layout/preference_category_material_settings</item>
        <item name="android:iconSpaceReserved">false</item>
    </style>

    <style name="CustomTunerSettings.PreferenceFragmentStyle" parent="@*android:style/PreferenceFragment.Material">
        <item name="allowDividerAfterLastItem">false</item>
    </style>

    <style name="CustomTunerSettings.PreferenceStyle" parent="@*android:style/Preference.DeviceDefault">
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">true</item>
        <item name="singleLineTitle">false</item>
        <item name="android:layout">@layout/preference_material_settings</item>
        <item name="android:iconSpaceReserved">false</item>
    </style>

    <style name="CustomTunerSettings.PreferenceTheme">
    </style>

    <style name="CustomTunerSettings.SwitchPreferenceStyle" parent="@style/CustomTunerSettings.PreferenceStyle">
        <item name="widgetLayout">@*android:layout/preference_widget_switch</item>
    </style>

    <!-- Custom Carrier Label -->
    <style name="TextAppearance.StatusBar.CarrierLabel" parent="@*android:style/TextAppearance.StatusBar.Icon">
        <item name="android:textSize">@dimen/status_bar_carrier_height</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/status_bar_carrier_color</item>
    </style>
    
    <!-- Pixel home dot style -->
    <style name="DotStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

   <style name="TextAppearance.StatusBar.Expanded.Weather">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.StatusBar.Expanded.Weather.Detailed">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>
